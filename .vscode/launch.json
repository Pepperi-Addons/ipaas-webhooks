    "version": "0.2.0",
    "configurations": [      
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/server-side",
            "program": "${workspaceFolder}/server-side/app.local.ts",
            "outFiles": [
                "${workspaceFolder}/server-side/build/*/*.js"
            ],
            "preLaunchTask":{
                "label": "Compile Addon",
                "type": "npm",
                "script": "compile",
                "group": "build",
                "problemMatcher": []
            },
             // "preLaunchTask": {
                 //"label": "Build API",
                // "type": "typescript",
                 //"tsconfig": "server-side/tsconfig.json",
                 ///"option": "watch"
